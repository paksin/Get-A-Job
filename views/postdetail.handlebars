{{!-- post detail --}}
<div class="container">
  <div class="col-md-12 col-lg-12">
    <article class="post vt-post">
      <div class="row">
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4">

          {{!-- pfp --}}
          <div class="post-type post-img">
            <img src="{{user.profile_pic}}" width="325" class="img-responsive" alt="image post" />
          </div>
          <div class="author-info author-info-2">
            <ul class="list-inline">
              <li>
                <div class="info" width="200">
                  <p>Posted on:</p>
                  <strong>{{date_created}}</strong>
                </div>
              </li>
            </ul>
          </div>
        </div>

        {{!-- info --}}
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
          <div class="caption">
            <h3 class="md-heading">{{title}}</h3>
            <h4>{{user.name}}</h4>
            <p>
              {{description}}
            </p>
            <p>
              $ {{pay}} /Hour
            </p>
            <p>
             {{city}}
            </p>
            <a class="btn btn-default" href="/profile/{{user_id}}" role="button">View Profile</a>
          </div>
        </div>
      </div>
    </article>
    <div class="clearfix"></div>
  </div>
</div>

{{!-- comment input --}}
<div class="container">
  <div class="col-md-12 col-lg-12">
    <article class="post vt-post">
      <div class="row">
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4 d-flex align-items-center justify-content-center">
          <h4>Create Comment:</h4>
        </div>
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8 d-flex align-items-center justify-content-center">
          <form class="form new-comment-form col-sm-12 my-3" data-postid="{{id}}">
            <div class="form-group col-sm-12">
              <label for="comment-desc">Comment:</label>
              <textarea class="form-input col-sm-12" id="comment-desc" name="comment-desc"></textarea>
            </div>
            <div class="form-group col-sm-12">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
  </div>
</div>

{{!-- posted comments --}}
<div class="container">
  <div class="col-md-12 col-lg-12">
    <article class="post vt-post">
      <div class="row">
        {{#each comments as |comment|}}
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4">

          {{!-- pfp --}}
          <div class="post-type post-img">
            <img src="{{user.profile_pic}}" width="325" class="img-responsive" alt="image post" />
          </div>
          <div class="author-info author-info-2">
            <ul class="list-inline">
              <li>
                <div class="info" width="200">
                  <p>Posted on:</p>
                  <strong>{{date_created}}</strong>
                </div>
              </li>
            </ul>
          </div>
        </div>

        {{!-- info --}}
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
          
          <div class="row mb-2">
            <div class="col-md-8">
              <h4>Commented: </h4>
              <p>{{comment.comment_text}}</p>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
  </div>
</div>

{{!-- script --}}
<script src="/js/comment.js"></script>