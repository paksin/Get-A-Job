<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-md-7">
      <div class="card p-3 py-4">
        {{! orofile picture }}
        <div class="text-center">
          <img src="/Assets/imgs/pfp.jpg" width="100" class="rounded-circle" />
        </div>
        {{! anme and current job  }}
        <div class="text-center mt-3">
          <h5 class="mt-2 mb-0">{{user.name}}</h5>
          <span>{{job.title}}</span>
          {{! view posts }}
          <div class="px-4 mt-1">
            <p class="fonts">View All My Posts!
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{! exsiting posts by this user }}
{{#each}}
<div class="container">
  <div class="col-md-12 col-lg-12">
    <article class="post vt-post">
      <div class="row">
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4">
          <div class="post-type post-img">
            <a href="#"><img
                src="/Assets/imgs/pfp.jpg"
                class="img-responsive"
                alt="image post"
              /></a>
          </div>
          <div class="author-info author-info-2">
            <ul class="list-inline">
              <li>
                <div class="info">
                  <p>Posted on:</p>
                  <strong>{{date}}</strong></div>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
          <div class="caption">
            <h3 class="md-heading"><a href="#">{{title}}</a></h3>
            <p> {{description}} </p>
            <a class="btn btn-default" href="/postdetail{{this.id}}" role="button">Read More</a>
          </div>
        </div>
      </div>
    </article>
    <div class="clearfix"></div>
  </div>
</div>
{{/each}}