{{!-- profile --}}
{{!-- header --}}
<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-md-7">
      <div class="card-home p-3 py-4">
        {{! profile picture }}
        <div class="text-center">
          <img src="{{profile_pic}}" width="250" class="rounded-circle" />
        </div>
        {{! anme and current job  }}
        <div class="text-center mt-3">
          <h5 class="mt-2 mb-0">{{name}}</h5>
          <span>{{current_job}}</span>
          {{! view posts }}
          <div class="px-4 mt-1">
            <p class="fonts">View All My Posts!
            </p>
            {{#if thisUser}}
            <button id="editMenu">âœŽ</button>
            <div id="formHolder"></div>
            <a class="button google" href="/logout">Logout</a>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{! exsiting posts by this user }}
{{#each posts as |post|}}
<div class="container">
  <div class="col-md-12 col-lg-12">
    <article class="post vt-post">
      <div class="row">
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4">
          <div class="post-type post-img">
            <img
                src="{{user.profile_pic}}"
                width="325"
                class="img-responsive"
                alt="image post"
              />
          </div>

          <div class="author-info author-info-2">
            <ul class="list-inline">
              <li>
                <div class="info" width="200">
                  <p>Posted on:</p>
                  <strong>{{date_created}}</strong></div>
              </li>
            </ul>
          </div>
        </div>

        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
          <div class="caption">
            <h3 class="md-heading">{{title}}</h3>
            <p> {{description}} </p>
            <a class="btn btn-default" href="/postdetail/{{id}}" role="button">Read More</a>
            <a id="delete" class="btn btn-default" role="button">ðŸ—‘</a>

          </div>
        </div>
      </div>
    </article>
    <div class="clearfix"></div>
  </div>
</div>
{{/each}}

